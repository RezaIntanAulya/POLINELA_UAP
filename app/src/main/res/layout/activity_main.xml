<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header_main" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:text="Berikut Jurusan Yang Ada di Politeknik Negeri Lampung :"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="1"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPangan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardMaxElevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="18dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:scaleType="centerCrop"
                            android:src="@drawable/budidayatanamanpangan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUDIDAYA TANAMAN PANGAN"
                            android:gravity="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvKebun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardMaxElevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:scaleType="centerCrop"
                            android:src="@drawable/budidayatanamanperkebunan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUDIDAYA TANAMAN PERKEBUNAN"
                            android:gravity="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTektan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardMaxElevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:scaleType="centerCrop"
                            android:src="@drawable/teknologipertanian" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEKNOLOGI PERTANIAN"
                            android:gravity="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTernak"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardMaxElevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:scaleType="centerCrop"
                            android:src="@drawable/jurusanpeternakan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PETERNAKAN"
                            android:gravity="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvEkbis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardMaxElevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ekonomidanbisnis" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EKONOMI DAN BISNIS"
                            android:gravity="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>